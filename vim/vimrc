" prolog
function! PrologRun()
    !osascript -e 'tell application "terminal" to do script "clear;cd \"%:p:h\";gprolog --entry-goal \"consult(%:r)\""'
    !osascript -e 'tell application "terminal" to activate'
endfunction
command! -nargs=* PrologRun call PrologRun()

