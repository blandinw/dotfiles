#!/usr/bin/env bash

#basics
export PS1='\n\[\033[0;35m\]\u@\h\[\033[00m\]:\w \nâ†’ '
export EDITOR='vim'
export TERM='xterm-256color'
export HISTSIZE=10000
export HISTFILE="$HOME/.histfile"
shopt -s histappend

#python/django
PATH="${PATH}:/Library/Frameworks/Python.framework/Versions/2.6/bin"
PYTHONPATH='/Library/Python/2.6/site-packages/'
# /usr/local/lib/python

#ruby
export RUBYOPT='rubygems'

#rvm
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

PATH="$HOME/bin:/usr/local/bin:/usr/local/sbin:$PATH"

#xmonad
PATH="$PATH:$HOME/.cabal/bin"
export USERWM=`which xmonad`

[ -f $HOME/dotfiles/init.lua ] && export LUA_INIT="@$HOME/dotfiles/init.lua"

export PATH
export PYTHONPATH
export NODE_PATH
export CLASSPATH
