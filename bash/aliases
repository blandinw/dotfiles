#!/usr/bin/env bash

alias ls='ls -G'
alias ll='ls -l'
alias blt="vim $HOME/dotfiles/bash; source $HOME/dotfiles/bashrc"
alias t100='tail -n100'

#screen
alias scrv="screen -S screenvim -t vim"

#git
alias gst='git status'
alias gb='git branch'
alias gc='git commit'
alias gca='git commit -a'
alias gcaa='git commit -a --amend -C HEAD'
alias gg='git grep'
alias gl='git log'
alias gp='git push'

#php
alias sf='php symfony'
alias sf2='php app/console'

#ruby/rails
alias ss='script/server'
alias sg='shotgun --host 0.0.0.0 config.ru'
alias gotogem="cd $GEM_HOME/gems"

#python
alias p='python'
alias dj='python manage.py'
alias djsm='python manage.py schemamigration --auto'
alias djsmi='python manage.py schemamigration --initial'
alias djm='python manage.py migrate'
alias djmf='python manage.py migrate --fake'
alias djrs='python manage.py runserver'

#java
alias javassert='java -enableassertions'
alias tcpmon='java org.apache.axis.utils.tcpmon'
alias adminclient='java org.apache.axis.client.AdminClient'
alias javap='java -Dhttp.proxyHost=localhost -Dhttp.proxyPort=8080'

#coffeescript
alias coffeec='find . -name "*.coffee" | xargs coffee -w -c'
